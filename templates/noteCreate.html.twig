{% extends 'base.html.twig' %}
    {% block content %}
        <style>
            .form-container {
                padding-top: 4em;
            }
            .form-header {
                margin-bottom: 1em; /* Add some space between the header and the form */
            }
            #demonstration_type2{
                padding-top: 6em;
            }
        </style>
        <div class="container">
            <h1 style="padding-top: 3em;font-size: 2rem;">Dashboard</h1>

            {#    Vue render    #}
{#            <div id="app"></div>#}

            <div class="row">
                <div class="col-md-10">
                    <h1 class="form-header" style="padding-top: 2em;">Create Secure Envelope</h1>
                    {{ form(form) }}
                </div>
            </div>

            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>

    {% endblock %}
