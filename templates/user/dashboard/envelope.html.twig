{% extends 'user/dashboard/layout.html.twig' %}

{% block dashboard_main %}
    <div class="transactions-section">
        <h2>Your Secure Envelope</h2>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <div class="transaction-card">
{#            {% include '/user/dashboard/_envelope_section.html.twig' %}#}
            {% if customerHasNote is defined and customerHasNote %}
                <section class="mb-4">
                    <div class="tooltip-box">{{ 'dashboard.edit_your_secure_envelope_tip'|trans }}</div>

                    <a class="btn btn-outline-dark btn-floating m-1 mt-4" href="/note/{{ customerHasNote }}/edit" role="button">
                        <i class="">{{ 'dashboard.edit_your_secure_envelope'|trans }}</i>
                    </a>

                    <form action="{{ path('note_delete', {'noteId': customerHasNote}) }}" method="post" style="display:inline-block; margin: 0; padding: 0; background: transparent; box-shadow: none;" onsubmit="return confirm('{{ 'confirm_delete_note'|trans }}');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete_note') }}">
                        <button type="submit" class="btn btn-outline-danger btn-floating m-1 mt-4">
                            <i class="">{{ 'dashboard.delete_your_secure_envelope'|trans }}</i>
                        </button>
                    </form>
                </section>
                {#                <p>explanation</p>#}
            {% endif %}

            {% if customerHasNote is defined and not customerHasNote %}
                <section class="mb-4">
                    <div class="tooltip-box">{{ 'dashboard.create_your_secure_envelope_tip'|trans }}</div>

                    <a class="btn btn-outline-dark btn-floating m-1 mt-4" href="/note/create" role="button"><i class="">{{ 'dashboard.create_your_secure_envelope'|trans }}</i></a>

                </section>
                {#                <p>explanation</p>#}
            {% endif %}
        </div>
    </div>
{% endblock %}
