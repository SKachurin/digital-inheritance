<div class="sidebar-card">
    <h3>KMS Status</h3>

    {% if kms_statuses is not defined or kms_statuses is empty %}
        <p class="muted">No KMS data yet.</p>
    {% else %}
        {% for kms in kms_statuses %}
            {% set dotClass =
                (not kms.used) ? 'dot-unused'
                : (kms.last_health is same as(true)) ? 'dot-ok'
                : 'dot-bad'
            %}

            <div class="activity-item">
                <div class="activity-icon">
                    <span class="status-dot {{ dotClass }}"></span>
                </div>

                <div class="activity-content">
                    <p>{{ kms.alias }}</p>

                    {% if kms.check_date %}
                        <span class="activity-time">
                            Last check: {{ kms.check_date|date('Y-m-d H:i') }}
                        </span>
                    {% else %}
                        <span class="activity-time">Last check: never</span>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    {% endif %}
</div>
