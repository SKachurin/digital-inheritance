{% extends 'base.html.twig' %}

{% block og_title %}{{ 'wait_page.og_title'|trans }}{% endblock %}

{% block og_description %}{{ 'wait_page.description'|trans }}{% endblock %}
{% block og_image %}{{ absolute_url('/build/logo-TheDigitalHeir-192x192.png') }}{% endblock %}

{% block content %}
    <style>
        .faq {
            padding: 5rem 9%;
            background: rgba(250, 250, 250, 0.95);
            text-align: center;
            margin-top: 12rem;
            margin-left: 9%;
            margin-right: 9%;

        }

        .faq h1 {
            margin-top: 0rem !important;
            padding-top: 0rem !important;
            margin-bottom: 4rem !important;

        }

        body {
            font-family: 'Inter', 'Roboto', sans-serif;
            color: #333;
            text-align: left;
        }

        h1 {
            font-size: 2.8rem;
            font-weight: 800;
            text-align: center;
            margin-bottom: 4rem;
            letter-spacing: -0.5px;
        }

        .container.text h3 {
            margin: 0 0 2rem 7rem !important;
            font-size: 1.5rem;
            padding-bottom: 3rem !important;
        }

        .container.text h4 {
            margin: 0 0 2rem 8rem !important;
        }

        h4 {
            font-size: 1.5rem;
            font-weight: 600;
            color: #222;
            margin-top: 2rem;
        }

        p {
            color: #444;
            max-width: 80%;
            margin: 0 auto 1.2rem;
            font-size: 1.2rem;
        }


        .faq ul {
            list-style: disc inside;
            padding-left: 1.5rem;
            margin-bottom: 1.5rem;
        }

        .faq ul li {
            font-size: 1.2rem;
            line-height: 1.5;
            margin-bottom: 0.6rem;
            text-indent: 0; /* Ensures proper alignment */
            padding-left: 4rem; /* Ensures lists have proper indentation */
        }

        .faq ol li {
            font-size: 1.2rem;
            line-height: 1.5;
            margin-bottom: 0.6rem;
            text-indent: 0; /* Ensures proper alignment */
            padding-left: 4rem; /* Ensures lists have proper indentation */
        }

        .faq ul li::marker {
            font-size: 1.4rem;
            color: #111;
        }

        .container.text {
            max-width: 700px;
            margin: auto;
            text-align: left;
        }

        .container.text {
            max-width: 900px; /* Keeps all content within a readable width */
            margin: 0 auto; /* Centers the container */
            text-align: left; /* Ensures natural text alignment */
            padding: 0 2rem; /* Adds space from edges */
        }

        .container.text > * {
            max-width: 80%; /* Matches paragraph width */
            margin: 0 auto 1.5rem; /* Keeps spacing uniform */
        }

        #ol li {
            padding-left: 1rem !important;
        }

        h3, h4 {
            font-size: 1.5rem;
            font-weight: 600;
            margin-top: 2rem;
        }

        .btn-container {
            display: flex;
            justify-content: center;
            margin: 2rem 0;

        }

        #go_home {
            font-size: 1.5rem !important;
            margin-top: 4rem;
            margin-bottom: 4rem;
        }

        .banner-container {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 2rem;
            width: 100%;
            max-width: 95%  !important;
        }

        .banner-container img {
            max-width: 100% !important;
            height: auto;
        }

        @media (max-width: 991px) {
            .faq {
                margin-top: 27rem;
                margin-left: 2%;
                margin-right: 2%;
                padding: 5rem 2%;
            }
            .container.text {
                padding-top: 2rem;
            }
            .container.text > * {
                max-width: 100%;
            }

            p {
                color: #444;
                max-width: 100%;
                margin: 1rem 2rem 2rem 2rem !important;
                font-size: 2rem;
            }

            .faq ul li {
                padding-left: 4rem; /* Ensures lists have proper indentation */
                font-size: 2rem;
            }

            .faq ol li {
                padding-left: 4rem; /* Ensures lists have proper indentation */
                font-size: 2rem;
            }

            .container.text h3 {
                margin: 1rem 2rem 2rem 2rem !important;
                font-size: 2.5rem;
                padding-bottom: 3rem !important;
            }
            .container.text h4 {
                margin: 1rem 2rem 2rem 2rem !important;
                font-size: 2.3rem !important;
            }

            #ol {
                padding-left: 6rem !important;
            }

            .banner-container video {
                width: 80% !important;
            }

        }
    </style>
<section class="faq">
    <div class="container text">

        <h1 class="mt-7 pt5" style="padding-top: 4em;">
            {{ 'wait_page.title'|trans }}
        </h1>
{#        <p>{{ '404_page.text'|trans |raw }}</p>#}
{#        <p>{{ '404_page.intro'|trans |raw }}</p>#}

        <h3>{{ 'wait_page.text'|trans |raw }}</h3>

{#        <div class="btn-container">#}
{#            <a id="go_home" href="{{ path('home') }}" class="btn btn-outline-dark btn-floating btn-in-text">#}
{#                {{ '404_page.button'|trans }}#}
{#            </a>#}
{#        </div>#}

        <div class="banner-container">
            <video autoplay loop muted playsinline width="50%">
                <source src="{{ absolute_url('/banners/black_cat_21sec.mp4') }}" type="video/mp4">
                Your browser does not support the video tag.
            </video>
        </div>


    </div>
</section>
{% endblock %}

