{% extends 'base.html.twig' %}

{% block og_title %}{{ 'checkout_page.og_title'|trans({}, 'legal')}}{% endblock %}
{% block og_description %}{{ 'checkout_page.description'|trans }}{% endblock %}
{% block og_image %}{{ absolute_url('/build/logo-TheDigitalHeir-192x192.png') }}{% endblock %}

{% block content %}
    <style>
        .faq {
            padding: 5rem 9%;
            background: rgba(250, 250, 250, 0.95);
            text-align: center;
            margin-top: 12rem;
            margin-left: 9%;
            margin-right: 9%;
        }

        .faq h1 {
            margin-top: 0rem !important;
            padding-top: 0rem !important;
            margin-bottom: 4rem !important;
        }

        body {
            font-family: 'Inter', 'Roboto', sans-serif;
            color: #333;
            text-align: left;
        }

        h1 {
            font-size: 2.8rem;
            font-weight: 800;
            text-align: center;
            margin-bottom: 4rem;
            letter-spacing: -0.5px;
        }

        p {
            color: #444;
            max-width: 80%;
            margin: 0 auto 1.2rem;
            font-size: 1.2rem;
        }

        .container.text {
            max-width: 900px;
            margin: auto;
            text-align: left;
        }

        /* Product Table */
        .product-table {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 2rem;
            justify-content: center;
            text-align: center;
            max-width: 800px;
            margin: 3rem auto;
        }

        .product {
            border: 2px solid #ddd;
            border-radius: 10px;
            padding: 2rem;
            background: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }

        .product:hover {
            transform: translateY(-5px);
        }

        .product img {
            width: 100px;
            height: 100px;
            margin-bottom: 1rem;
        }

        .product h3 {
            font-size: 1.5rem;
            margin-bottom: 1rem;
        }

        .product p {
            font-size: 1.1rem;
            color: #555;
            line-height: 1.5;
        }

        .product .price {
            font-size: 1.3rem;
            font-weight: bold;
            color: #222;
            margin-top: 1rem;
        }

        .product button {
            display: block;
            width: 100%;
            padding: 1rem;
            margin-top: 1rem;
            background: #1A202C;
            color: white;
            font-weight: bold;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background 0.3s ease;
        }

        .product button:hover {
            background: #333;
        }

        /* Mobile Layout */
        @media (max-width: 991px) {
            .faq {
                margin-top: 27rem;
                margin-left: 2%;
                margin-right: 2%;
                padding: 5rem 2%;
            }

            .product-table {
                grid-template-columns: 1fr;
            }

            p {
                font-size: 2rem;
            }

            .product h3 {
                font-size: 2.2rem;
            }

            .product p {
                font-size: 1.8rem;
            }

            .product .price {
                font-size: 2rem;
            }

            .product button {
                font-size: 2rem !important;
                width: 80%;
                margin-right: 10%;
                margin-left: 10%;
            }

            .product {
                padding-top: 4rem;
                padding-bottom: 4rem;
            }

            .product img {
                width: 200px;
                height: 200px;
            }

        }
    </style>

    <section class="faq">
        <div class="container text">
            <h1 class="mt-7 pt5" style="padding-top: 4em;">
                {{ 'checkout_page.title'|trans({}, 'legal') }}
            </h1>

            <script src="https://cdn.paddle.com/paddle/paddle.js"></script>
            <script>
                document.addEventListener("DOMContentLoaded", function () {
                    Paddle.Setup({ vendor: {{ paddle_vendor_id }} });
                });
            </script>

            <p>{{ 'checkout_page.intro'|trans({}, 'legal')|raw }}</p>

            <!-- Product Table -->
            <div class="product-table">
                <!-- Standard Subscription -->
                <div class="product">
                    <img src="{{ absolute_url('/build/logo-TheDigitalHeir-192x192.png') }}" alt="Standard Plan">
                    <h3>{{ 'checkout_page.standard'|trans({}, 'legal')|raw }}</h3>
                    <p>{{ 'checkout_page.desc_standard'|trans({}, 'legal')|raw }}</p>
                    <p class="price">{{ 'checkout_page.price_standard'|trans({}, 'legal')|raw }}</p>
                    <button onclick="openCheckout(STANDARD_PRODUCT_ID)">{{ 'checkout_page.buy_standard'|trans({}, 'legal')|raw }}</button>
                </div>

                <!-- Premium Subscription -->
                <div class="product">
                    <img src="{{ absolute_url('/build/logo_invert_TheDigitalHeir_192x192.png') }}" alt="Premium Plan">
                    <h3>{{ 'checkout_page.premium'|trans({}, 'legal')|raw }}</h3>
                    <p>{{ 'checkout_page.desc_premium'|trans({}, 'legal')|raw }}</p>
                    <p class="price">{{ 'checkout_page.price_premium'|trans({}, 'legal')|raw }}</p>
                    <button onclick="openCheckout(PREMIUM_PRODUCT_ID)">{{ 'checkout_page.buy_premium'|trans({}, 'legal')|raw }}</button>
                </div>
            </div>
        </div>
    </section>

    <script>
        function openCheckout(productId) {
            Paddle.Checkout.open({
                product: productId,
                title: "The Digital Heir Subscription",
                email: "{{ app.user ? app.user.email : '' }}",
                passthrough: JSON.stringify({ user_id: "{{ app.user ? app.user.id : 'guest' }}" }),
                successCallback: function(data) {
                    console.log("Checkout successful!", data);
                },
                closeCallback: function() {
                    console.log("Checkout closed.");
                }
            });
        }

        // Replace these IDs with actual Paddle Product IDs
        const STANDARD_PRODUCT_ID = 'pri_01jnrgsgxw34wfwqj3e8482d64';
        const PREMIUM_PRODUCT_ID = 'pri_01jnrh59cc4mjgh0dqy92dwm66';
    </script>

{% endblock %}
