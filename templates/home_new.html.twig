{% extends 'base.html.twig' %}

{% block og_title %}{{ 'home_page.title'|trans }}{% endblock %}
{% block og_description %}{{ 'home_page.description'|trans }}{% endblock %}
{% block og_image %}{{ absolute_url('/banners/The_Master_and_Margarita.png') }}{% endblock %}

{% block content %}
    <style>
        .hero {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 5rem 9%;
            background: rgba(255, 255, 255, 0.9);
            min-height: 70vh;
            margin-top: 8rem;
        }

        .hero-content {
            width: 55%;
        }

        .hero-content h1 {
            font-size: 3.5rem;
            font-weight: bold;
            color: #222;
            line-height: 1.2;
            padding-top: 0rem;
        }

        /*.hero-content p {*/
        /*    font-size: 1.2rem;*/
        /*    color: #555;*/
        /*    margin-top: 1rem;*/
        /*    max-width: 90%;*/
        /*}*/

        .btn-primary {
            display: inline-block;
            margin-top: 1.5rem;
            padding: 0.75rem 2rem;
            background: #1A202C;
            color: white;
            text-decoration: none;
            border-radius: 6px;
            font-weight: bold;
        }

        .hero-image {
            width: 40%;
        }

        .hero-image img {
            width: 100%;
            border-radius: 10px;
        }

        .faq {
            padding: 5rem 9%;
            background: rgba(250, 250, 250, 0.95);
            text-align: center;
            margin-top: 2rem;
            margin-left: 9%;
            margin-right: 9%;
        }

        .faq h2 {
            font-size: 3.2rem;
            margin-bottom: 2rem;
            font-weight: 600;
            color: #222;
            text-shadow: 1px 1px 5px rgba(0, 0, 0, 0.1);
            line-height: 1.2;
            padding-top: 0rem;
        }

        .faq-container {
            max-width: 800px;
            margin: 0 auto;
        }

        .faq-item {
            border-bottom: 1px solid #ddd;
            padding: 1.5rem 0;
        }

        .faq-question {
            width: 100%;
            background: none;
            border: none;
            font-size: 1.5rem;
            font-weight: bold;
            text-align: left;
            cursor: pointer;
            padding: 1rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .faq-answer {
            display: none;
            padding: 1rem;
            font-size: 1.2rem;
            color: #555;
            text-align: left;
        }

        .faq-toggle {
            font-size: 1.5rem;
            font-weight: bold;
        }

        @media (max-width: 991px) {
            .hero-content h1,
            .faq h2 {
                margin-top: 0rem !important;

            }
            .hero {
                flex-direction: column;
                text-align: center;
                padding: 5rem 5%;
                margin-top: 17rem;
            }

            .hero-content {
                width: 100%;
            }

            .hero-image {
                width: 90%;
                margin-top: 5rem;
            }
            .faq {
                padding: 7rem 1rem 4rem;
                margin-left: 2%;
                margin-right: 2%;
            }

            .faq-answer,
            .faq-question {
                font-size: 2.5rem !important;
            }

            .faq-toggle {
                font-size: 3.5rem !important;
                margin-left: 3rem;
            }

        }
    </style>
    <section class="hero">
        <div class="hero-content">
            <h1>{{ 'home_page.text_title'|trans }}</h1>
            <p>{{ 'home_page.info_1_text'|trans }}</p>
            <p>{{ 'home_page.info_2_text'|trans }}</p>
            <p>{{ 'home_page.info_3_text'|trans |raw }}</p>
            {% if app.user %}
                <a href="{{ path('about') }}" class="btn btn-outline-dark btn-floating m-4 mt-4 btn-in-text">
                    <i class="">{{ 'home_page.learn_more'|trans }}</i>
                </a>
            {% else %}
                <a href="{{ path('user_registration') }}" class="btn btn-outline-dark btn-floating m-4 mt-4 btn-in-text">
                    <i class="">{{ 'home_page.register'|trans }}</i>
                </a>
            {% endif %}
        </div>
        <div class="hero-image">
            <img src="{{ absolute_url('/banners/TheDigitalHeir_Contact_Us_banner1_.png') }}" alt="Contact Image 1">
        </div>
    </section>

    <section class="faq">
        <h2>{{ 'faq.title'|trans }}</h2>
        <div class="faq-container">
            <div class="faq-item">
                <button class="faq-question">
                    {{ 'faq.q1'|trans }} <span class="faq-toggle">+</span>
                </button>
                <div class="faq-answer">
                    <p>{{ 'faq.a1'|trans }}</p>
                </div>
            </div>

            <div class="faq-item">
                <button class="faq-question">
                    {{ 'faq.q2'|trans }} <span class="faq-toggle">+</span>
                </button>
                <div class="faq-answer">
                    <p>{{ 'faq.a2'|trans }}</p>
                </div>
            </div>

            <div class="faq-item">
                <button class="faq-question">
                    {{ 'faq.q3'|trans }} <span class="faq-toggle">+</span>
                </button>
                <div class="faq-answer">
                    <p>{{ 'faq.a3'|trans }}</p>
                </div>
            </div>

            <div class="faq-item">
                <button class="faq-question">
                    {{ 'faq.q4'|trans }} <span class="faq-toggle">+</span>
                </button>
                <div class="faq-answer">
                    <p>{{ 'faq.a4'|trans }}</p>
                </div>
            </div>

            <div class="faq-item">
                <button class="faq-question">
                    {{ 'faq.q5'|trans }} <span class="faq-toggle">+</span>
                </button>
                <div class="faq-answer">
                    <p>{{ 'faq.a5'|trans }}</p>
                </div>
            </div>

            <div class="faq-item">
                <button class="faq-question">
                    {{ 'faq.q6'|trans }} <span class="faq-toggle">+</span>
                </button>
                <div class="faq-answer">
                    <p>{{ 'faq.a6'|trans }}</p>
                </div>
            </div>

            <div class="faq-item">
                <button class="faq-question">
                    {{ 'faq.q7'|trans }} <span class="faq-toggle">+</span>
                </button>
                <div class="faq-answer">
                    <p>{{ 'faq.a7'|trans }}</p>
                </div>
            </div>

            <div class="faq-item">
                <button class="faq-question">
                    {{ 'faq.q8'|trans }} <span class="faq-toggle">+</span>
                </button>
                <div class="faq-answer">
                    <p>{{ 'faq.a8'|trans }}</p>
                </div>
            </div>

            <div class="faq-item">
                <button class="faq-question">
                    {{ 'faq.q9'|trans }} <span class="faq-toggle">+</span>
                </button>
                <div class="faq-answer">
                    <p>{{ 'faq.a9'|trans }}</p>
                </div>
            </div>

            <div class="faq-item">
                <button class="faq-question">
                    {{ 'faq.q10'|trans }} <span class="faq-toggle">+</span>
                </button>
                <div class="faq-answer">
                    <p>{{ 'faq.a10'|trans }}</p>
                </div>
            </div>

        </div>
    </section>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const faqItems = document.querySelectorAll(".faq-question");

            faqItems.forEach((item) => {
                item.addEventListener("click", function () {
                    const answer = this.nextElementSibling;
                    const toggle = this.querySelector(".faq-toggle");

                    if (answer.style.display === "block") {
                        answer.style.display = "none";
                        toggle.textContent = "+";
                    } else {
                        answer.style.display = "block";
                        toggle.textContent = "âˆ’";
                    }
                });
            });
        });
    </script>

{% endblock %}
