        /* =======================================
             TILDA-STYLE FAQ ITEM
             (Circle plus → X on open, with transitions)
          ======================================= */
        .tilda-faq-item {
            border-bottom: 1px solid #ddd;
            padding: 1.5rem 0;
            text-align: left; /* match your existing style */
        }

        /* The clickable question row */
        .tilda-faq-button {
            display: flex;
            align-items: center;
            justify-content: space-between;
            width: 100%;
            cursor: pointer;
            background: none;
            border: none;
            font-size: 1.5rem;
            font-weight: bold;
            padding: 1rem;
            margin: 0;
        }

        /* We'll toggle an ".open" class to animate the plus → X */
        .tilda-faq-item.open .icon-line2 {
            transform: rotate(90deg);
        }

        /* Circle + lines default style */
        .tilda-icon {
            width: 40px;
            height: 40px;
            fill: none;
            /*stroke: #11263a;*/
            stroke-width: 2px;
            transition: fill 0.3s ease, stroke 0.3s ease;
        }

        .tilda-icon circle {
            /*fill: transparent;*/
            transition: fill 0.3s ease;
        }

        /* The two lines that form a plus sign */
        .tilda-icon .icon-line1,
        .tilda-icon .icon-line2 {
            transition: transform 0.3s ease, stroke 0.3s ease;
            transform-origin: center;
            stroke: #11263a;
        }

        /* On hover, fill circle and lines become white */

        .tilda-faq-button:hover .tilda-icon {
            fill: #4f808f !important;
            stroke: #ffffff !important;
        }
        .tilda-icon circle:hover {
            fill: #4f808f !important;
            transition: fill 0.3s ease;
        }
        .tilda-icon:hover {
            fill: #4f808f !important;
            transition: fill 0.3s ease;
        }

        .tilda-faq-button:hover .tilda-icon .icon-line1,
        .tilda-faq-button:hover .tilda-icon .icon-line2 {
            stroke: #ffffff !important;
        }


        /* Keyboard focus style (for accessibility) */
        .tilda-faq-button:focus-visible .tilda-icon {
            fill: #4f808f;
            stroke: #ffffff;
        }

        /* Slide-down answer: use max-height transitions for a smooth open/close */
        .faq-answer {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.6s ease;
            padding: 0 1rem;
        }

        .tilda-faq-item.open .faq-answer {
            max-height: 700px;
        }

        .tilda-faq-button.faq-question #text{
            max-width: 90% !important;
        }

        .tilda-faq-item.open .icon-line1 {
            transform: rotate(45deg) !important;
        }
        .tilda-faq-item.open .icon-line2 {
            transform: rotate(45deg) !important;
        }

